{
  "version": 2,
  "builds": [
    {
      "src": "scripts/verify-structure.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["pages/**", "views/**", "static/**"]
      }
    },
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["pages/**", "views/**", "static/**"]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
